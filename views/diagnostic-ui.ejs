<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Device diagnostics</title>
  <style>
    body {margin:0;height:100vh;display:flex;justify-content:center;align-items:center;
          background:#111;color:#fff;font-family:Arial,Helvetica,sans-serif;}
    .wrap {text-align:center;font-size:24px;line-height:1.5;max-width:90vw;}
    h1 {margin:0 0 0.5em 0;font-size:42px;}
    table {margin:1em auto;border-collapse:collapse;font-size:22px;}
    td,th {border:1px solid #555;padding:0.4em 0.8em;}
    th {background:#222;}
    /* countdown now sits well below everything else */
    #countdown {margin-top:48px;text-align:center;font-size:26px;}
  </style>
</head>
<body>
  <div class="wrap">
    <h1>BetSA Device</h1>

    <div id="time"><%= d.time %></div>
    <div>Hostname&nbsp;&nbsp;<%= d.hostname %></div>
    <div>Arch&nbsp;&nbsp;<%= d.arch %></div>
    <div>Model&nbsp;&nbsp;<%= d.deviceModel %></div>

    <h2 style="margin-top:1em;font-size:30px;">Network</h2>
    <table>
      <thead><tr><th>Interface</th><th>IP</th><th>MAC</th></tr></thead>
      <tbody>
        <% d.network.forEach(function(n){ %>
          <tr><td><%= n.iface %></td><td><%= n.ip %></td><td><%= n.mac %></td></tr>
        <% }); %>
      </tbody>
    </table>

    <% if (urls.hdmi1 || urls.hdmi2) { %>
      <h2 style="margin-top:1em;font-size:30px;">Saved URLs</h2>
      <table>
        <thead><tr><th>Output</th><th>URL</th></tr></thead>
        <tbody>
          <% if (urls.hdmi1) { %>
            <tr><td>HDMI-1</td><td style="word-break:break-all;"><%= urls.hdmi1 %></td></tr>
          <% } %>
          <% if (urls.hdmi2) { %>
            <tr><td>HDMI-2</td><td style="word-break:break-all;"><%= urls.hdmi2 %></td></tr>
          <% } %>
        </tbody>
      </table>
    <% } %>

    <% if (target) { %>
      <div id="countdown">Redirecting in&nbsp;<span id="count">5</span>â€¦</div>
    <% } %>
  </div>

  <script>
    /* live Johannesburg clock */
    function updateTime(){
      document.getElementById('time').textContent =
        new Date().toLocaleString('en-ZA', {timeZone:'Africa/Johannesburg'});
    }
    updateTime();
    setInterval(updateTime, 1000);

    /* optional redirect countdown */
    <% if (target) { %>
      (function(){
        let seconds = 5;
        const span  = document.getElementById('count');
        const url   = "<%= target %>";
        const tick  = setInterval(() => {
          seconds--;
          span.textContent = seconds;
          if (seconds === 0) {
            clearInterval(tick);
            window.location.href = url;
          }
        }, 1000);
      })();
    <% } %>
  </script>
</body>
</html>
